# Database Configuration
MYSQL_URL=${{ MySQL-UOW-Room-Booking.MYSQL_URL }}

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=${{ PORT }}
NODE_ENV=production

# CORS Configuration
# Use '*' to allow all origins, or specify comma-separated list of allowed origins
ALLOWED_ORIGINS=*
# ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.railway.app

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
FRONTEND_URL=https://room-booking-system-uow-production.up.railway.app

